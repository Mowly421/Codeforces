#include<bits/stdc++.h>
using namespace std;
int main()
{
    string s;
    int p=0,m=0,ans=0;
    cin>>s;
    for(int i=0;i<s.size();i++)
    {
        if(s[i]=='1')
        {
            p++;
            m=0;
 
        }
        else
        {
            m++;
            p=0;
 
        }
 
     if(p>=7 || m>=7)
     {
         ans=1;
     }
    }
    if(ans==1)
        {
            cout<<"YES"<<endl;
        }
        else
        {
            cout<<"NO"<<endl;
        }
 
}
